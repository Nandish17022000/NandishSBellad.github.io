    <!-- Modal for Project Ideas -->
    <div id="ideas-modal" class="modal-backdrop hidden modal-enter">
        <div class="modal-content">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-2xl font-bold text-slate-800">Generated Project Ideas</h3>
                <button id="close-modal-btn" class="text-slate-500 hover:text-slate-800">&times;</button>
            </div>
            <div id="ideas-output" class="space-y-4 text-left">
                <!-- Loading indicator will be shown here -->
