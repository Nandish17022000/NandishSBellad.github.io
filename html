    </div>

    <script>
        // --- Constants and State ---
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const generateBtn = document.getElementById('generate-ideas-btn');
        const topicInput = document.getElementById('topic-input');
        const ideasModal = document.getElementById('ideas-modal');
        const ideasOutput = document.getElementById('ideas-output');
        const closeModalBtn = document.getElementById('close-modal-btn');
        const API_KEY = ""; // Leave blank, will be handled by the environment

        // --- Event Listeners ---
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        generateBtn.addEventListener('click', handleGenerateIdeas);
        closeModalBtn.addEventListener('click', closeModal);
        ideasModal.addEventListener('click', (e) => {
            if (e.target === ideasModal) {
                closeModal();
            }
        });
        
        // --- Functions ---
        
        /**
         * Initializes the page on load.
         */
        function initialize() {
            document.getElementById('year').textContent = new Date().getFullYear();
            initializeScrollAnimations();
        }

        /**
         * Sets up the Intersection Observer for scroll animations.
         */
        function initializeScrollAnimations() {
            const faders = document.querySelectorAll('.fade-in-on-scroll');
            const appearOptions = {
                threshold: 0.1,
                rootMargin: "0px 0px -50px 0px"
            };
            const appearOnScroll = new IntersectionObserver(function(entries, observer) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, appearOptions);

            faders.forEach(fader => {
                appearOnScroll.observe(fader);
            });
        }
        
        /**
         * Handles the click event for generating project ideas.
         */
        async function handleGenerateIdeas() {
            const topic = topicInput.value.trim();
            if (!topic) {
                showModalError("Please enter a topic or industry.");
                return;
            }

            openModal();
            showLoading();

            try {
                const prompt = `As an expert data scientist, generate 3 innovative data analysis project ideas related to "${topic}". For each idea, provide a clear title and a concise 2-3 sentence description of the project's goal and potential impact. Format the output with a title starting with '###' and the description following it.`;
                
                const responseText = await callGeminiAPI(prompt);
                displayIdeas(responseText);

            } catch (error) {
                console.error("Error generating ideas:", error);
                showModalError("Sorry, something went wrong while generating ideas. Please try again later.");
            }
        }

        /**
         * Calls the Gemini API with a given prompt.
         * @param {string} prompt - The prompt to send to the API.
         * @returns {Promise<string>} The text response from the API.
         */
        async function callGeminiAPI(prompt) {
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${API_KEY}`;
            const payload = {
                contents: [{
                    parts: [{ text: prompt }]
                }]
            };

            const response = await fetch(apiUrl, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            if (!response.ok) {
                throw new Error(`API call failed with status: ${response.status}`);
            }

            const result = await response.json();
            
            if (result.candidates && result.candidates.length > 0 &&
                result.candidates[0].content && result.candidates[0].content.parts &&
                result.candidates[0].content.parts.length > 0) {
                return result.candidates[0].content.parts[0].text;
            } else {
                throw new Error("Invalid response structure from API.");
            }
        }

        /**
         * Displays the generated ideas in the modal.
         * @param {string} text - The raw text from the API.
         */
        function displayIdeas(text) {
            const ideasHtml = text.split('###').slice(1).map(idea => {
                const [title, ...descriptionParts] = idea.trim().split('\n');
                const description = descriptionParts.join('<br>');
                return `<div class="p-4 border-l-4 border-indigo-500 bg-indigo-50 rounded-r-lg">
                            <h4 class="text-lg font-semibold text-slate-800">${title.trim()}</h4>
                            <p class="text-slate-600 mt-1">${description.trim()}</p>
                        </div>`;
            }).join('');
            ideasOutput.innerHTML = ideasHtml;
        }

        /**
         * Shows an error message in the modal.
         * @param {string} message - The error message to display.
         */
        function showModalError(message) {
            ideasOutput.innerHTML = `<div class="text-red-600 text-center">${message}</div>`;
            openModal();
        }

        /**
         * Shows the loading indicator in the modal.
         */
        function showLoading() {
            ideasOutput.innerHTML = '<div class="flex justify-center items-center py-8"><div class="loader"></div></div>';
        }

        /**
         * Opens the modal with a transition.
         */
        function openModal() {
            ideasModal.classList.remove('hidden');
            setTimeout(() => ideasModal.classList.remove('modal-enter'), 10); // Start transition
        }

        /**
         * Closes the modal with a transition.
         */
        function closeModal() {
            ideasModal.classList.add('modal-leave-active');
            setTimeout(() => {
                ideasModal.classList.add('hidden');
                ideasModal.classList.remove('modal-leave-active');
                ideasModal.classList.add('modal-enter'); // Reset for next open
            }, 300);
        }

        // --- Initial Page Load ---
        document.addEventListener('DOMContentLoaded', initialize);

    </script>
</body>
</html>
